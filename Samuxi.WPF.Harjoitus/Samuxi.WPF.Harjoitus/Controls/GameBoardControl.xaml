<UserControl x:Name="gameUserControl" x:Class="Samuxi.WPF.Harjoitus.Controls.GameBoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:myuserControl="clr-namespace:Samuxi.WPF.Harjoitus.Controls"
             xmlns:model="clr-namespace:Samuxi.WPF.Harjoitus.Model"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DrawingBrush x:Key="BoardDrawing" Stretch="None" TileMode="Tile" Viewport="0,0,2,2" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="LightGray">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,2,2" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="White">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <RectangleGeometry Rect="0,0,1,1" />
                                <RectangleGeometry Rect="1,1,1,1" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>
    
    <Viewbox>
    <ItemsControl x:Name="BoardItemsControl" ItemsSource="{Binding ElementName=gameUserControl, Path=Game.BoardItems}" AllowDrop="True"
                  Drop="ItemsControl_Drop"  MouseMove="ItemsContainer_MouseMove" DragEnter="ItemsControl_OnDragEnter" DragOver="BoardItemsControl_OnDragOver" >
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                    <Grid Background="{StaticResource BoardDrawing}" myuserControl:GridUtility.ColumnCount="{Binding ElementName=gameUserControl, Path=Game.Size.Columns}"
                          myuserControl:GridUtility.RowCount="{Binding ElementName=gameUserControl, Path=Game.Size.Rows}">
                       
                    </Grid>
            </ItemsPanelTemplate>
            
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type model:BoardItem}">
                        <myuserControl:PlayMarker x:Name="MarkerControl" Item="{Binding}" PreviewMouseLeftButtonDown="MarkerControl_OnPreviewMouseLeftButtonDown">
                        </myuserControl:PlayMarker>
                </DataTemplate>
                
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Column" Value="{Binding Column}" />
                    <Setter Property="Grid.Row" Value="{Binding Row}" />
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="myuserControl:PlayMarker.Move">
                            <BeginStoryboard x:Name="MovementEvent">
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width"
                                                     From="0.1" Duration="0:0:2" To="1" />
                                    <DoubleAnimation Storyboard.TargetProperty="Height"
                                                     From="0.5" Duration="0:0:2" To="1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="myuserControl:PlayMarker.SymbolToKing">
                            <BeginStoryboard x:Name="ToKing">
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width"
                                                     From="0.8" Duration="0:0:2" To="1" />
                                    <DoubleAnimation Storyboard.TargetProperty="Height"
                                                     From="0.8" Duration="0:0:2" To="1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
    </Viewbox>
</UserControl>
