<Window x:Class="Samuxi.WPF.Harjoitus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Samuxi.WPF.Harjoitus.Controls"
        Title="MainWindow" MinHeight="400" MinWidth="400" Height="600" Width="600"
            WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Name="FileMenu" Header="_File" InputGestureText="Alt+F">
                <MenuItem Header="_Save" InputGestureText="Alt+S">
                    
                </MenuItem>
                <MenuItem Header="_Load"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Game">
                <MenuItem Header="Se_ttings"/>
            </MenuItem>
            <MenuItem Name="AboutMenu" Header="_About">
                
                <MenuItem Header="_Help" />
                
                <MenuItem Header="_Info"/>
            </MenuItem>
        </Menu>
        <!-- Game board -->
        <controls:GameBoardControl Grid.Row="1" Width="Auto" Height="Auto"  />
    </Grid>
</Window>
