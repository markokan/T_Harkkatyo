<Window x:Class="Samuxi.WPF.Harjoitus.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="200" Width="300"  DataContext="{Binding AboutVm, Source={StaticResource Locator}}">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontSize="30" Margin="5" Text="Game universe" />
        <TextBlock Margin="5" Text="Tekijä: Marko Kangas" />
        <TextBlock Margin="5" Text="Versio: 0.1v" />
        <TextBlock Margin="5" Text="Päiväys: 29.4.2015" />
        <Button Content="Close" Width="100" HorizontalAlignment="Right" Click="Ok_OnClick" />
    </StackPanel>
    
</Window>
