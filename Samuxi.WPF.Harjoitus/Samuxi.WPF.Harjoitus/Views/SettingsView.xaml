<Window x:Class="Samuxi.WPF.Harjoitus.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Samuxi.WPF.Harjoitus.Converters"
        Title="Game settings" Height="450" Width="400" DataContext="{Binding Settings, Source={StaticResource Locator}}" ResizeMode="NoResize">
    <Window.Resources>
        <conv:ColorToBrushValueConverter x:Key="ColorToBrushValueConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"  />
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                
                <GroupBox Grid.Row="0" Header="Basic properties">
                    <StackPanel>
                        <TextBlock Text="Type: " Margin="2" />
                        <ComboBox Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" ItemsSource="{Binding GameTypes}" SelectedItem="{Binding Settings.TypeOfGame, Mode=TwoWay}" />
                        <TextBlock Text="Size: "  Margin="2" />
                        <ComboBox Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"  ItemsSource="{Binding GameSizes}" SelectedItem="{Binding Settings.Size, Mode=TwoWay}" />
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Board properties"  Grid.Row="1">
                    <GroupBox Header="Colors">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Select: " Margin="5" VerticalAlignment="Center"/>
                        <Border  Height="30" Width="30" BorderThickness="1" BorderBrush="Black">
                            <Rectangle Fill="{Binding Settings.GridColorOne, Converter={StaticResource ColorToBrushValueConverter}}" />
                        </Border>
                        <Button Content="..." Height="25" Width="25" Margin="5"  Command="{Binding SelectColorCommand}" CommandParameter="0" />
                        <Border Height="30" Width="30" BorderThickness="1" BorderBrush="Black">
                            <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Fill="{Binding Settings.GridColorTwo, Converter={StaticResource ColorToBrushValueConverter}}"/>
                        </Border>
                        <Button Content="..." Height="25" Width="25" Margin="5"  Command="{Binding SelectColorCommand}" CommandParameter="1" />
                    </StackPanel>
                    </GroupBox>
                </GroupBox>
                <GroupBox Header="Player properties"  Grid.Row="2">
                    <StackPanel>
                        <GroupBox Header="Player one">
                        <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Color: "  VerticalAlignment="Center"  Margin="5"/>
                            <Button Height="30" Width="30" Margin="5" Command="{Binding SelectColorCommand}" CommandParameter="2">
                                <Border Height="29" Width="29"  BorderBrush="Black" BorderThickness="1"  >
                                    <Rectangle Fill="{Binding Settings.PlayerOneColor, Converter={StaticResource ColorToBrushValueConverter}}"/>
                                </Border>
                            </Button>
                                <TextBlock Text="Symbol: " VerticalAlignment="Center"  Margin="5" />
                            <ComboBox Width="100" Height="30" ItemsSource="{Binding Symbols}" SelectedItem="{Binding Settings.PlayerOneSymbol, Mode=TwoWay}" />
                        </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Player two">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Color: " Margin="5" VerticalAlignment="Center"/>

                                <Button Height="30" Width="30" Margin="5" Command="{Binding SelectColorCommand}" CommandParameter="3" >
                                    <Border BorderBrush="Black" BorderThickness="1" Height="29" Width="29" >
                                    <Rectangle Fill="{Binding Settings.PlayerTwoColor, Converter={StaticResource ColorToBrushValueConverter}}"/>
                                </Border>
                            </Button>
                            <TextBlock Text="Symbol: " VerticalAlignment="Center"  Margin="5" />
                            <ComboBox Width="100" Height="30" ItemsSource="{Binding Symbols}" SelectedItem="{Binding Settings.PlayerTwoSymbol, Mode=TwoWay}" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Width="80" Content="OK" Margin="3" Click="Ok_OnClick" />
            <Button Width="80" Content="Cancel" Margin="3" Click="Close_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
